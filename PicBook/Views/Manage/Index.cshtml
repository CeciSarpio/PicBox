@model PicBook.Models.IndexViewModel
@{
    ViewBag.Title = "Your Gallery";
}
<h1 class="col-sm-4"; >@ViewBag.Title.</h1>
   @using (Html.BeginForm("Index",
                                 "Manage",
                                 FormMethod.Post,
                                 new { enctype = "multipart/form-data" }))
   {
    <label for="file">Upload Image:</label>
    <input type="file" name="file" id="file" /><br><br>
    <input type="submit" value="Upload Image" />
    @ViewBag.Message
   }
<br>
@foreach (var imgPath in Directory.GetFiles(Server.MapPath("~/Images")))
{
    var img = new FileInfo(imgPath);
        <img style="width: 350px; height: 350px;" src="@Url.Content(String.Format("~/Images/{0}", img.Name))"; />      
}
<br>
<p class="text-success">@ViewBag.StatusMessage</p>
